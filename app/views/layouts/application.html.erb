<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> Client Lounge</title>
  <%= stylesheet_link_tag "reset","960","text","application"%>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
<div class="container_12" id="header">
	<div class="grid_8">
		<%= image_tag('client-lounge-logo.jpg')%>
	</div>
	<div class="grid_4">
		<p>The online project management tool for mycompanynamehere</p>
	</div>
</div>
<div class="container_12" id="navigation">
	<div class="grid_12">
		<ul>
			<li><%= link_to "Home", root_url %></li>
			<li><a href="">link somewhere</a></li>
			<li><a href="">link somewhere</a></li>
			<li><a href="">link somewhere</a></li>
			<li><a href="">link somewhere</a></li>
			<li><a href="">link somewhere</a></li>
			<li><a href="">Contact Us</a></li>
		</ul>
	</div>
</div>
<div class="container_12" id="main">
	<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}", :class => 'grid_12' %>
  <% end %>
	<div class="grid_12">
  	<%= content_tag :h1, yield(:title)%>
  </div>
	<div class="grid_8">
		<%= yield %>
	</div>
	<div class="grid_4">
		<%= yield(:sidebar)%>
	</div>
</div>
<div class="container_12" id="footer">
	
</div>


</body>
</html>
